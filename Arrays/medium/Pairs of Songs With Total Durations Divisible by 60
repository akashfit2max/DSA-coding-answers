class Solution {
public:
    // array approach
    int numPairsDivisibleBy60(vector<int>& time) {
        vector<long long int>rem(60);
        for(auto ele : time)
        {
            rem[ele%60]+=1;
        }
        
        long long int c=0;
        c+=((rem[0]-1)*rem[0])/2;
        c+=((rem[30]-1)*rem[30])/2;
        
        for(int i=1;i<=29;i++)
        {
            c+=rem[i]*rem[60-i];
        }
        
        return c;
    }
    
};