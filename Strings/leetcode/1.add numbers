class Solution {
public:
    string addStrings(string num1, string num2) {
        int i = num1.length()-1;
        int j = num2.length()-1;
        int sum = 0, carry = 0;
        
        string num = "";
        while(i>=0 || j>=0 || carry)
        {
            int sum = 0;
            if(i>=0)
            {
                sum+=num1[i]-'0';
                i--;
            }
            if(j>=0)
            {
                sum+=num2[j]-'0';
                j--;
            }
            sum+=carry;
            carry = sum/10;
            sum = sum%10;
            
            num+=to_string(sum);
        }
        reverse(num.begin(),num.end());
        return num;
    }
};
